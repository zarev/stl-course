{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++.exe build active file",
            "type": "shell",
            "command": ["C:\\MinGW\\bin\\g++.exe", "-std=c++17"],
            "args": ["/std:", "c++17", "/std:c++17", "-std=c++17", "-std", "c++17", "-lstdc++", "-g", "${file}", "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin\\g++.exe"
            },
            "problemMatcher" : {
                "base": "$g++",
                "fileLocation": "absolute"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}